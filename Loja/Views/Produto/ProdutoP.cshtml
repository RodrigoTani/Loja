@model IEnumerable<Loja.Models.Produto>
@using (Html.BeginForm())
{
    foreach (var item in Model)
    {
        <div class="cartao">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <a href="#"><img class="card-img-top" src="@Url.Content(item.ImagemUrl)" alt="" width="200" height="130"></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            @Html.ActionLink( @item.Titulo, "Details", "Produto", new { id = item.Id }, null)
                        </h4>

                        <h5>Preço: R$ @item.ValorFinal  </h5>
                        <p class="card-text">@item.Descricao2</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        <p class="button2">@Html.ActionLink("Adicionar", "AddToCart", "CarrinhodeCompras", new { id = item.Id }, htmlAttributes: new { @class = "glyphicon glyphicon-shopping-cart" })</p>
                    </div> 
                </div>
            </div>
        </div>
    }
}
